{
  "manifest_version": 3,
  "name": "Tab Monitor Closer",
  "description": "Closes unread tabs that have been open beyond a threshold.",
  "version": "1.0",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "scripting",
    "notifications",
    "sessions"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_title": "Tab Monitor Closer",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
